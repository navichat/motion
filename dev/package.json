{
	"name": "@motion/dev-platform",
	"version": "1.0.0",
	"description": "Unified Motion Platform with Chat, 3D Viewer, and RSMT Integration",
	"type": "module",
	"main": "server.js",
	"scripts": {
		"build": "npm run build:webapp && npm run build:viewer",
		"build:webapp": "cd webapp && npm run build",
		"build:viewer": "cd viewer && npm run build",
		"dev": "npm run dev:all",
		"dev:all": "concurrently \"npm run dev:node-server\" \"npm run dev:python-server\" \"npm run dev:webapp\" \"npm run dev:viewer\"",
		"dev:node-server": "cd server && node server.js",
		"dev:python-server": "cd server && python enhanced_motion_server.py",
		"dev:webapp": "cd webapp && npm run dev",
		"dev:viewer": "cd viewer && npm run dev",
		"start": "npm run start:production",
		"start:production": "concurrently \"npm run start:node-server\" \"npm run start:python-server\"",
		"start:node-server": "cd server && node server.js",
		"start:python-server": "cd server && python enhanced_motion_server.py",
		"install:all": "npm install && cd psyche && npm install && cd ../webapp && npm install && cd ../viewer && npm install",
		"test": "npm run test:viewer && npm run test:python",
		"test:viewer": "cd viewer && npm test",
		"test:python": "cd server && python -m pytest ../tests/",
		"lint": "eslint webapp/ viewer/ psyche/ server/*.js",
		"format": "prettier --write webapp/ viewer/ psyche/ server/*.js"
	},
	"dependencies": {
		"@cloudkit/client": "^1.3.1",
		"@mwni/events": "^3.0.0",
		"@mwni/log": "^2.2.0",
		"@mwni/random": "^1.0.1",
		"@mwni/toml": "^1.0.0",
		"@mwni/fetch": "^1.0.0",
		"@mwni/socket": "^1.3.0",
		"@mwni/wss": "^1.1.0",
		"@structdb/mysql": "^1.3.3-alpha",
		"@koa/router": "^12.0.0",
		"bcrypt": "^5.1.1",
		"koa": "^2.14.2",
		"koa-easy-ws": "^2.1.0",
		"koa-range": "^0.3.0",
		"koa-static": "^5.0.0",
		"yaml": "^2.3.3",
		"three": "^0.177.0",
		"@gltf-transform/core": "^3.7.1",
		"@gltf-transform/extensions": "^3.7.1",
		"@pixiv/three-vrm": "^2.0.6",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"mithril": "^2.2.2",
		"animejs": "^3.2.1",
		"howler": "^2.2.4"
	},
	"devDependencies": {
		"concurrently": "^8.2.2",
		"esbuild": "^0.19.2",
		"chokidar": "^3.5.3",
		"postcss": "^8.4.30",
		"postcss-import": "^15.1.0",
		"postcss-nested": "^6.0.1",
		"vitest": "^0.34.6",
		"@types/three": "^0.177.0",
		"typescript": "^5.2.2",
		"eslint": "^8.50.0",
		"prettier": "^3.0.3"
	},
	"workspaces": [
		"psyche",
		"webapp", 
		"viewer"
	],
	"engines": {
		"node": ">=16.0.0",
		"python": ">=3.8.0"
	},
	"keywords": [
		"motion-capture",
		"3d-avatar",
		"chat",
		"realtime",
		"websocket",
		"neural-networks",
		"RSMT"
	]
}
