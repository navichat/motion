{
  "name": "@motion/testing-framework",
  "version": "1.0.0",
  "description": "Automated testing framework for Motion Viewer 3D environment",
  "main": "index.js",
  "scripts": {
    "test": "node run-tests.js run",
    "test:unit": "vitest run unit/",
    "test:integration": "playwright test e2e/integration/",
    "test:visual": "playwright test e2e/visual/",
    "test:performance": "playwright test e2e/performance/",
    "test:smoke": "playwright test e2e/smoke/",
    "test:lighthouse": "lhci autorun",
    "test:all": "node run-tests.js run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:debug": "vitest --reporter=verbose",
    "test:visual:only": "node run-tests.js visual",
    "test:visual:compare": "node -e \"import('./utils/visual-analyzer.js').then(m => new m.default().analyzeAll())\"",
    "test:visual:report": "node -e \"import('./utils/report-generator.js').then(m => new m.default().generateReport({}))\"",
    "test:visual:update-baseline": "node -e \"import('./utils/visual-analyzer.js').then(m => new m.default().updateBaseline())\"",
    "test:performance:only": "node run-tests.js performance",
    "test:performance:benchmark": "playwright test e2e/performance/ --config=playwright.benchmark.config.js",
    "test:performance:compare": "node -e \"console.log('Performance comparison not implemented yet')\"",
    "test:setup": "node run-tests.js setup",
    "test:cleanup": "node run-tests.js cleanup",
    "playwright:install": "playwright install",
    "playwright:codegen": "playwright codegen",
    "docker:test": "docker-compose -f ../docker-compose.yml run --rm motion-viewer-test",
    "docker:dev": "docker-compose -f ../docker-compose.yml up motion-viewer-dev",
    "clean": "rm -rf test-results/ reports/ screenshots/current/ screenshots/diff/ coverage/ temp/",
    "clean:all": "npm run clean && rm -rf node_modules/",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "setup": "playwright install && npm run setup:fixtures",
    "setup:fixtures": "node tools/setup-fixtures.js",
    "ci": "npm run lint && npm run test && npm run test:report"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "puppeteer": "^21.0.0",
    "vitest": "^0.34.0",
    "jsdom": "^22.0.0",
    "canvas": "^2.11.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "sharp": "^0.32.0",
    "resemblejs": "^4.1.0",
    "commander": "^11.0.0",
    "@lhci/cli": "^0.12.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^0.34.0",
    "@vitest/ui": "^0.34.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-playwright": "^0.16.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
